.loadThemeFont(@familyName, @fontName) {
  @font-face {
    font-family: @familyName;
    src: url('@{fontsFolder}/@{fontName}.eot'); /* IE9*/
    src: url('@{fontsFolder}/@{fontName}.eot?#iefix')
        format('embedded-opentype'),
      /* IE6-IE8 */ url('@{fontsFolder}/@{fontName}.woff2') format('woff2'),
      /* chrome firefox */ url('@{fontsFolder}/@{fontName}.woff') format('woff'),
      /* chrome firefox */ url('@{fontsFolder}/@{fontName}.ttf')
        format('truetype'),
      /* chrome firefox opera Safari, Android, iOS 4.2+*/
        url('@{fontsFolder}/@{fontName}.svg#Precious Sans') format('svg'); /* iOS 4.1- */
  }
}

.loadFonts() {
  .loadThemeFont ('Precious Sans Medium', 'Precious Sans-Book W00 Regular');;
  .loadThemeFont ('Precious Sans Bold', 'Precious Sans-Bold W00 Regular');;
  .loadThemeFont ('Precious Sans Light', 'Precious Sans-Light W00 Regular');;
}

.loadFonts();

/*-------------------
      Base Sizes
--------------------*/
h1 {
  font-size: clamp(2rem, 2.25vw, 4.06rem);
  line-height: clamp(2.400rem, 2.25vw, 4.875rem);
}

h2 {
  font-size: clamp(1.75rem, 2.25vw, 4.063rem);
  line-height: clamp(2.100rem, 2.25vw, 4.063rem);
  
}

h3 {
  font-size: clamp(1.75rem, 2.25vw, 2.813rem);
  line-height: clamp(2.100rem, 2.25vw, 2.813rem);
}

h4 {
  font-size: clamp(1.125rem, 2.25vw, 1.75rem);
  line-height: clamp(1.350rem, 2.25vw, 2.100rem);
}

p {
  font-size: clamp(1rem, 2.25vw, 1.375rem);
  line-height: clamp(1.300rem, 2.25vw, 1.788rem);
}

ol, ul {
  font-size: clamp(1rem, 2.25vw, 1.375rem);
  line-height: clamp(1.300rem, 2.25vw, 1.788rem);
  li {
    margin-bottom: 0.6rem;
  }
}